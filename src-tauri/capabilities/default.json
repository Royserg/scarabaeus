{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:default",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "list-files",
          "cmd": "ls",
          "args": [{ "validator": "\\S+" }],
          "sidecar": false
        },
        {
          "name": "open-file",
          "cmd": "open",
          "args": [{ "validator": "\\S+" }],

          "sidecar": false
        },
        {
          "name": "create-file",
          "cmd": "touch",
          "args": [{ "validator": "\\S+" }],

          "sidecar": false
        },
        {
          "name": "custom",
          "cmd": "sh",
          "args": true,
          "sidecar": false
        },
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    }
  ]
}
