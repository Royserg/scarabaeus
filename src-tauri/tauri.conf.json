{
  "productName": "scarabaeus",
  "version": "0.0.0",
  "identifier": "com.scarabaeus.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "shadow": true,
        "maximized": true,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "focus": true,
        "decorations": false,
        "title": "scarabaeus",
        "width": 400,
        "height": 300,
        "y": 10.0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
